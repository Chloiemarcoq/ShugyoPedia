@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Reset Password";
}
@model ShugyopediaApp.Services.ServiceModels.UserViewModel;
<div class="container my-4">
    <div class="row">
        <div class="col-6">
            <img src="~/img/logo_with_text_dark.png" alt="" width="450px" height="200px">
            <h1>Account Recovery</h1>
        </div>
        <div class="col-6">
            <h5>Reset Password</h5>
            <form asp-action="ResetPassword" asp-controller="Account" method="POST">
                <input type="hidden" asp-for="UserEmail" value="@Model.UserEmail" />
                <div class="form-group my-3">
                    <label for="Password">New Password</label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Enter New Password">
                </div>
                <div class="form-group my-3">
                    <label for="ConfirmPassword">Confirm New Password</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control"
                           placeholder="Confirm New Password">
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%;">Reset Password</button>
            </form>
        </div>
    </div>
</div>