@{
	ViewData["Title"] = "Edit Training";
}
@model ShugyopediaApp.Services.ServiceModels.AddTrainingViewModel
<main>
    <div class="container my-4">
        <h1 class="text-center">Edit Training</h1>
        <div class="row justify-content-center my-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="EditTraining" asp-controller="Training" enctype="multipart/form-data" method="POST">
                            <input type="hidden" asp-for="TrainingId" class="form-control"
                            value="@Model.TrainingId">
                            <div class="form-group my-3">
                                <div class="row">
                                    <div class="col-6">
                                        <label for="TrainingName">Edit Training Name</label>
                                        <input type="text" value="@Model.TrainingName" asp-for="TrainingName"
                                               class="form-control" placeholder="Enter training name">
                                        <span asp-validation-for="TrainingName" class="text-danger"></span>
                                    </div>
                                    <div class="col-6">
                                        <label for="CategoryNames">Edit Category</label>
                                        <select asp-for="CategoryId" class="form-select">
                                            <option selected value="@Model.CategoryId">@Model.CategoryName</option>
                                            @foreach (var category in Model.Categories)
                                            {
                                                if (category.CategoryId == @Model.CategoryId){ continue; }
                                                <option value="@category.CategoryId">@category.CategoryName</option>         
                                            }
                                        </select>
                                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group my-3">
                                <label for="TrainingDescription">Edit Training Description:</label>
                                <textarea asp-for="TrainingDescription" class="form-control" rows="3" value="@Model.TrainingDescription"></textarea>
                                <span asp-validation-for="TrainingDescription" class="text-danger"></span>
                            </div>
                            <div class="form-group my-3 mx-auto">                                
                                <label for="TrainingImageFile">Edit Training Image: </label>
                                <input type="file" asp-for="TrainingImageFile" accept=".png">
                                <span asp-validation-for="TrainingImageFile" class="text-danger"></span>
                                <br />&nbsp;<i class="fas fa-info-circle" style="color: #2258b4;"></i> Leave empty to retain the current training cover image.<br>
                            </div>
                            <div class="d-flex align-items-center justify-content-center mt-5">
                                <button type="reset" class="btn btn-primary mx-5">Clear</button>
                                <button type="submit" class="btn btn-success mx-5">Edit Training</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
