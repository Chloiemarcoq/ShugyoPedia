@using ShugyopediaApp.Services.ServiceModels;
@{
	ViewData["Title"] = "Training Categories";
}
@model List<TrainingCategoryViewModel>
<main>
    <div class="container-fluid">
        <h1 class="text-center">Training Categories</h1>
        <div class="d-flex justify-content-between">
            <a class="btn btn-success" asp-action="AddTrainingCategory" asp-controller="TrainingCategory">+Add Training Category</a>
        </div>
        <div class="card my-3">
            <div class="card-body">
                <table class="table table-striped table-hover table-borderless text-center bg-light my-5" id="datatable">
                    <thead class="table-info my-3">
                        <tr>
                            <th>Category Name</th>
                            <th>Category Icon</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.CategoryName</td>
                                <td>@Html.Raw(category.CategoryIcon) <kbd><kbd>"@category.CategoryIcon"</kbd></kbd></td>
                                <td>
                                    <a class="btn btn-primary" asp-action="Index" asp-controller="Training">View Trainings</a>
                                    <a class="btn btn-primary" asp-action="EditTrainingCategory" asp-controller="TrainingCategory" asp-route-categoryId="@category.CategoryId">&#128393;</a>
                                    <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">&#128465;</a>
                                </td>
                            </tr>
                        }                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>

    <div class="modal fade" id="deleteModal" tabindex="-1" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Delete</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="fw-5 text-center">Are you sure you want to delete this Training Category?</p>
                    <div class="d-flex align-items-center justify-content-center">
                        <button type="button" class="btn btn-success mx-3" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger mx-3">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
