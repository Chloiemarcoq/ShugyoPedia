
<aside id="sidebar" class="sidebar border">
    <div class="sidebar-header d-flex align-items-center justify-content-center me-5">
        <a asp-action="Index" asp-controller="Home"><img src="~/img/logo_with_text_dark.png" alt="" /></a>
    </div>
    <ul class="sidebar-nav" id="sidebar-nav">
        <li class="nav-item">
            <a class="nav-link " asp-controller="Home" asp-action="Index" id="nav-link">
                <span><i class="fa-solid fa-house"></i> Home</span>
            </a>
        </li>
    </ul>
    <hr class="m-0">
    <div class="fs-5 sidebar-header p-2">Training Categories</div>
    <!--SEARCH BAR-->
    <form action="" class="m-2">
        <input type="search" name="search-category" id="search-category" class="form-control" placeholder="Search...">
    </form>
    <!--END OF SEARCH BAR-->
    <ul class="sidebar-nav" id="category-list">
        @foreach (var category in Model)
        {
            <li class="nav-item">
                <a class="nav-link" asp-controller="Training" asp-action="AllTrainings" asp-route-categoryName="@category.CategoryName">
                    <span>@Html.Raw(category.CategoryIcon) @category.CategoryName</span>
                </a>
            </li>
        }

    </ul>
</aside>


